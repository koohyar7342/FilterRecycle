<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/item_filter_root_card"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@android:color/holo_orange_light"
    android:clipToPadding="false"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="2dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_filter_tittle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعیین نوع همکاری"

            android:textColor="@android:color/holo_red_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_filter_remove"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/ic_round_close_24_darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/item_filter_tittle"
            app:layout_constraintEnd_toStartOf="@+id/item_filter_tittle"
            app:layout_constraintTop_toTopOf="@+id/item_filter_tittle"
            app:tint="#ff0000" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
